{% extends 'base.html.twig' %}

{% block body %}

  <h1 class="page-header">S'identifier</h1>

  {% if error %}
    <div class="alert alert-danger" role="alert">
      {{ error.messageKey|trans(error.messageData) }}
    </div>
  {% endif %}

  {{ include('_messages.html.twig') }}

  <form action="{{ path('_security_check') }}" method="post"  novalidate="novalidate" class="form-horizontal">
    <div class="form-group">
      <label class="col-sm-2 control-label required" for="form_username">Identifiant</label>
      <div class="col-sm-10">
        <input type="text" id="form_username" name="_username" required="required" class="form-control">
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label required" for="form_password">Mot de passe</label>
      <div class="col-sm-10">
        <input type="password" id="form_password" name="_password" required="required" class="form-control">
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-2"></div>
      <div class="col-sm-10">
        <button type="submit" id="form_submit" name="form[submit]" class="btn btn-default">Valider</button>
      </div>
    </div>
    {#
        If you want to control the URL the user
        is redirected to on success (more details below)
        <input type="hidden" name="_target_path" value="/account" />
    #}
  </form>

{% endblock %}
