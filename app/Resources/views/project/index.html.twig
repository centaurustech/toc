{% extends 'base.html.twig' %}

{% block body %}
  <h1 class="page-header">Nos projets</h1>

  <div class="row">
    {% for i in 0..9 %}
      <div class="col-md-3">
        <div class="thumbnail">
          <img src="holder.js/100%x200" alt="100%x200">
          <div class="caption">
            <h3>
              <a href="{{ path('project_show', { id: loop.index }) }}">Projet #{{ loop.index }}</a>
            </h3>

            <div class="row">
              <div class="col-md-6">
                <small>par toto</small>
              </div>
              <div class="col-md-6 text-right">
                <small><span class="glyphicon glyphicon-tag" aria-hidden="true"></span> {{ random(['Jeu', 'Musique', 'Vidéo', 'Livre', 'Caritatif'])}}</small>
              </div>
            </div>

            <hr style="margin:0">

            <div class="row">
              <div class="col-md-6">
                <small><span class="glyphicon glyphicon-piggy-bank" aria-hidden="true"></span> {{ random(10000)|number_format(0, ',', ' ') }} €</small>
              </div>
              <div class="col-md-6 text-right">

                <small><span class="glyphicon glyphicon-heart" aria-hidden="true"></span> 209</small>
                <small><span class="glyphicon glyphicon-hourglass" aria-hidden="true"></span> J-19</small>
              </div>
            </div>

          </div>
        </div>
      </div>
    {% endfor %}
  </div>
{% endblock %}
